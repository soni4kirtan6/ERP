@page
@model ConfigPortal.Pages.MappingPageModel
@{
   
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>MappingPage</title>
    
    @*<p>@Model.ConStr</p>*@
</head>
<body>
  @*  <p>Con String ::: </p>*@
    @*<p>@Model.dbstruct</p>*@
    <div class="name" style="font-size:35px; color:#736AFF;; font-weight:bold; text-align:center">2) Table and Column Mapping</div><br />
    <form method="POST" name="tableMappingForm">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col"><h3>Table Name</h3></th>
                    <th scope="col">Alternate name</th>
                </tr>
            </thead>
            @for (int i = 0; i < Model.Tables.Length; i++)
            {
                <tbody>
                    <tr>
                        <th scope="row">@Model.Tables[i]</th>
                        <td><input class="input--style-5" type="text" asp-for="@Model.AlternateName[i]"/></td>
                    </tr>
                </tbody>
            }
        </table>
        <div>
            <button class="btn btn--radius-2 btn--red m-t-30" type="submit" asp-page="CoumnMappingPage">Save & Next</button>
            <label class="label--desc" style="margin-top:10px; margin-left:25px" asp-for="ConStr">@Model.ConStr</label>
        </div>
    </form>
</body>
</html>
