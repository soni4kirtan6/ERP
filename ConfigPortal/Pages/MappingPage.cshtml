@model ConfigPortal.Pages.MappingPageModel
@{
   
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>MappingPage</title>
    
    @*<p>@Model.ConStr</p>*@
</head>
<body>
  @*  <p>Con String ::: </p>*@
    @*<p>@Model.dbstruct</p>*@
    <div class="name" style="font-size:35px; color:#736AFF; font-weight:bold; text-align:center">2) Table and Column Mapping</div><br />
    <form method="POST" name="tableMappingForm">
        <table class="table col-lg-4">
            <thead>
                <tr>
                    <th scope="col" ><h3>Table Name</h3></th>
                    <th scope="col" ><h3>Alternate name</h3></th>
                </tr>
            </thead>
            @for (int i = 0; i < Model.Tables.Length; i++)
            {
                <tbody>
                    <tr>
                        <th scope="row">@Model.Tables[i]</th>
                        <td><input class="form-control" type="text" asp-for="@Model.AlternateName[i]"/></td>
                    </tr>
                </tbody>
            }
        </table>
        <div>
            <button class="btn btn-success" type="submit">Save & Next</button>
        </div>
    </form>
</body>
</html>
